<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".DetailsActivity.EmployeeTaskDetailsActivity">

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffff"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/login_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/project" />
            <TextView
                android:id="@+id/textViewTaskEmployeeDetailsProjectId"
                android:layout_marginTop="20dp"
                android:text="Project id"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewTaskEmployeeDetailsEmployeeId"
                android:layout_marginTop="25dp"
                android:text="Employee Id"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewTaskEmployeeDetailsDescription"
                android:layout_marginTop="25dp"
                android:text="Description"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewTaskEmployeeDetailsDuo"
                android:layout_marginTop="25dp"
                android:text="Duo"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>