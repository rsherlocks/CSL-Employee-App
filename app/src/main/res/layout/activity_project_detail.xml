<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    tools:context=".DetailsActivity.ProjectDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProject"
        app:title="Project"
        app:menu="@menu/menu_toolar"
        android:layout_width="match_parent"
        android:background="#FAF1F1"
        android:layout_height="50dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffff"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/login_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/project" />
            <TextView
                android:id="@+id/textViewProjectTeamId"
                android:layout_marginTop="15dp"
                android:text="Team id"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectName"
                android:layout_marginTop="15dp"
                android:text="name"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectStartDate"
                android:layout_marginTop="15dp"
                android:text="Start date"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectEndDate"
                android:layout_marginTop="15dp"
                android:text="End date"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectDescription"
                android:layout_marginTop="15dp"
                android:text="Description"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectAmount"
                android:layout_marginTop="15dp"
                android:text="Amount"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectClient"
                android:layout_marginTop="15dp"
                android:text="Project client"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textViewProjectType"
                android:layout_marginTop="15dp"
                android:text="Project type"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectPriority"
                android:layout_marginTop="15dp"
                android:text="Project priority"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewProjectLeader"
                android:layout_marginTop="15dp"
                android:text="Project leader"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>