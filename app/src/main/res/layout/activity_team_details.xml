<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".DetailsActivity.TeamDetails">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTeam"
        app:title="Team"
        app:menu="@menu/menu_toolar"
        android:layout_width="match_parent"
        android:background="#FAF1F1"
        android:layout_height="50dp"/>

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffff"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/login_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/project" />
            <TextView
                android:id="@+id/textViewEmployeeDetailsTeamId"
                android:layout_marginTop="20dp"
                android:text="TEam Id"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textViewDetailsEmployeeId1"
                android:layout_marginTop="25dp"
                android:text="Employee Id1"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDetailsEmployeeId2"
                android:layout_marginTop="25dp"
                android:text="Employee Id2"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDetailsEmployeeId3"
                android:layout_marginTop="25dp"
                android:text="Employee Id3"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDetailsEmployeeId4"
                android:layout_marginTop="25dp"
                android:text="Employee Id4"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDetailsEmployeeId5"
                android:layout_marginTop="25dp"
                android:text="Employee Id5"
                android:textSize="19dp"
                android:padding="8dp"
                android:background="@drawable/reg_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>