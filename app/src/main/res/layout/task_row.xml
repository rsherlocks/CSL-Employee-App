<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_centerHorizontal="true"
    app:cardElevation="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/viewCardColor"
            android:background="#D50000"
            android:layout_width="5dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout

                android:layout_toRightOf="@id/viewCardColor"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTaskId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Task"
                    android:textColor="#1E1E1E"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textViewTaskDescription"
                    android:text="For technical revisions..."
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="#1E1E1E"
                    android:layout_marginTop="5dp"
                    android:layout_width="216dp"
                    android:layout_height="19dp"/>



            </LinearLayout>

            <View
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#707070"
                android:layout_width="3dp"
                android:layout_height="33dp"/>
            <LinearLayout
                android:id="@+id/layoutDateMonth"
                android:layout_toRightOf="@id/viewCardColor"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewTaskProjectId"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="project id"
                    android:textSize="15dp"
                    android:textColor="#1E1E1E"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewTaskDue"
                    android:text="Due"
                    android:textColor="#1E1E1E"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>


</androidx.cardview.widget.CardView>