<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    tools:context=".DetailsActivity.EmployeeDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Employee Profile"
        app:menu="@menu/menu_toolar"
        android:layout_width="match_parent"
        android:background="#FAF1F1"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:gravity="center"

        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/login_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/userphoto" />
        <TextView
            android:id="@+id/textViewEmployeeDetailsName"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsEmail"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsPhone"
            android:layout_marginTop="15dp"
            android:text="Phone"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsGender"
            android:layout_marginTop="15dp"
            android:text="Gender"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsAddress"
            android:layout_marginTop="15dp"
            android:text="Address"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsJoinOfDate"
            android:layout_marginTop="15dp"
            android:text="Join of Date"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsBirthOfDate"
            android:layout_marginTop="15dp"
            android:text="Birth of Date"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewEmployeeDetailsManager"
            android:layout_marginTop="15dp"
            android:text="Manager"
            android:textSize="19dp"
            android:padding="8dp"
            android:background="@drawable/reg_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</LinearLayout>