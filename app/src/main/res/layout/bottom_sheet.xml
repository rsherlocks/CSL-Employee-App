<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottomSheetEmployee"
    android:padding="20dp"
    android:layout_gravity="bottom"
    android:fitsSystemWindows="false"
    android:background="@drawable/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_marginBottom="50dp"
    app:layout_behavior="@string/fab_transformation_sheet_behavior"
    android:layout_height="wrap_content">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">
      <EditText
          android:id="@+id/editTextEmployeeName"
          android:textSize="21dp"
          android:hint="Name"
          android:gravity="top"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_account_box_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_margin="8dp"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeeEmail"
          android:textSize="21dp"
          android:hint="Email"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_email_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeePhone"
          android:textSize="21dp"
          android:hint="+8801955887484"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_call_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeeGender"
          android:textSize="21dp"
          android:hint="Gender"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_accessibility_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeeAddress"
          android:textSize="21dp"
          android:hint="Address"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_add_location_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeeJoiningDate"
          android:textSize="21dp"
          android:hint="Joining-Date(12-5-2020)"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_date_range_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeeBirthDate"
          android:textSize="21dp"
          android:hint="Birth-Date(30-12-1997)"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_date_range_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <EditText
          android:id="@+id/editTextEmployeeManager"
          android:textSize="21dp"
          android:hint="manager"
          android:gravity="top"
          android:layout_margin="8dp"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_baseline_local_library_24"
          android:background="@drawable/round_edittext"
          android:focusableInTouchMode="true"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <Button
          android:id="@+id/addEmployeeButton"
          android:gravity="center_vertical"
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_marginTop="25dp"
          android:layout_marginBottom="30dp"
          android:layout_height="wrap_content"
          android:text="Add Employee"


          />
  </LinearLayout>
   </ScrollView>


</LinearLayout>