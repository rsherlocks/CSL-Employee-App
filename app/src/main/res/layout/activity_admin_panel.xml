<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".PanelActivity.AdminPanelActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdminPanel"
        app:title="Admin Panel"

        app:menu="@menu/menu_dashboard"
        android:layout_width="match_parent"
        android:background="#F0F1F1"
        android:layout_height="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        >
        <TextView
            android:textSize="18sp"
            android:text="@string/admin_dashboard"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textColor="#000"
            android:id="@+id/employeeButtonManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="41dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#ffffff"
            android:elevation="8dp"

            android:text="employee management"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            />
        <Button
            android:textColor="#000"
            android:id="@+id/projectButtonManagement"
            android:gravity="left"
            android:paddingLeft="41dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#ffffff"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projects"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            />
        <Button
            android:textColor="#000"
            android:id="@+id/taskAdminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="41dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#ffffff"
            android:elevation="8dp"
            android:text="task management"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            />
        <Button
            android:textColor="#000"
            android:id="@+id/teamButton"
            android:gravity="left"
            android:paddingLeft="41dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#ffffff"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            />
        <Button
            android:textColor="#000"
            android:id="@+id/attendanceButton"
            android:gravity="left"
            android:paddingLeft="41dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#ffffff"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="attendance"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            />

    </LinearLayout>





</LinearLayout>